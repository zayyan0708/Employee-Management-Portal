@model IEnumerable<EmpMng.Models.Employee>

@{
    ViewBag.Title = "EmpDetails";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Salary
        </th>
        <th>
            Dept Name
        </th>
        <th>
            Manager
        </th>
    </tr>
    @foreach (var item in Model)
    {
        if ((ViewBag.empID == item.Designation.mid) && (ViewBag.empId!=item.eid) )
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.eid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation.DeptName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee1.name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.eid }) |
                    @Html.ActionLink("Details", "Details", new { id = item.eid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.eid })
                </td>
            </tr>

        }
    }

</table>
